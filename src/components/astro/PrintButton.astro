---
import PrintSvg from "@/assets/print.svg";
---

<div class="print" title="打印" onclick="window.print()">
  <PrintSvg width="100%" height="100%" style={{ pointerEvents: "none" }} />
</div>

<style>
  .print {
    height: var(--size-4);
    user-select: none;
    cursor: pointer;
  }

  .print:hover {
    opacity: 0.66;
  }
</style>
